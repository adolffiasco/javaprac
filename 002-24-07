//        Bank Account Solution
        BankAccount b1=new BankAccount();
        BankAccount b2=new BankAccount();
        b1.Name="Rokibul Hasan";
        b1.AccountId=2476;
        b1.Balance=98453.34;
        b2.Name="Adolf Fiasco";
